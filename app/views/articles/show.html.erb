<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<% if user_signed_in? %>
  <%= link_to "Edit", edit_article_path(@article) %><br>
  <%= link_to "Destroy", article_path(@article), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
    } %><br>
<% end %>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<p>View other posts <%= link_to "here", articles_path %></p>
